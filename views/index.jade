html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="/css/bootstrap.min.css", rel="stylesheet")
    title!= "dataRefinery.io: " + title
  body
   div(class="navbar-wrapper")
    div(class="navbar navbar-default navbar-static-top")
     div(class="container-fluid")
      div(class="navbar-header")
       button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
        span(class="glyphicon glyphicon-menu-hamburger") <br/>Menu
        //- span(class="sr-only") Toggle navigation
        //- span(class="icon-bar")<br/>
        //- span(class="icon-bar")<br/>
        //- span(class="icon-bar")<br/> Menu
      div(class="navbar-brand" style="margin-top:5px;")
        a(href="/" style="text-decoration: none; ")
         img(src="/images/droplet-drio.png" width="30px")
         span(style="color: #33CCCC; font-size: 20px;") &nbsp; dataRefinery.io
      div(id="navbar", class="navbar-collapse collapse")
        ul(class="nav navbar-nav" style="margin-top: 10px;")
         li
          a(href="/blog/") Blog
         li
          a(href="/services/") Services
         li
          a(href="/museums/") Museums
         li
          a(href="/contact/") Contact
        ul(class="nav navbar-nav navbar-right")
          li
           a(href="https://twitter.com/datarefineryio")
            img(src="/images/twitter.png" width="35px")
   div(class="container")
    block content
     div(class="page")
      h3!= title
      - each msg in message
        p!= md(msg)
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
